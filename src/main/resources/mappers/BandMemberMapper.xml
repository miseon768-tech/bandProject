<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.BandMemberMapper">

    <insert id="insertOne" parameterType="BandMember" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO bandMember (memberNo, bandNo, id, name, nickname, role, approved)
        VALUES (#{memberNo}, #{bandNo}, #{id}, #{name}, #{nickname}, #{role}, #{approved})
    </insert>

    <!-- 밴드 번호로 모든 멤버 조회 -->
    <select id="selectByBandNo" parameterType="int" resultType="BandMember">
        SELECT *
        FROM bandMember
        WHERE bandNo = #{bandNo}
        ORDER BY joinedAt DESC
    </select>

    <!-- 밴드 이름으로 모든 멤버 조회 -->
    <select id="selectByBandName" parameterType="String" resultType="BandMember">
        SELECT *
        FROM bandMember
        WHERE name = #{bandName}
    </select>

    <!-- 특정 멤버가 속한 밴드 조회 -->
    <select id="selectBandsByMemberId" parameterType="string" resultType="Band">
        SELECT *
        FROM band
        JOIN band_member bm ON b.no = bm.band_no
        WHERE bm.member_no = #{memberNo}
    </select>

    <!-- 멤버 번호와 밴드 번호로 밴드 멤버 조회 -->
    <select id="selectByMemberAndBand" parameterType="map" resultType="BandMember">
        SELECT * FROM bandMember WHERE memberNo=#{memberNo} AND bandNo=#{bandNo}
    </select>

    <!-- 승인 대기 중인 밴드 멤버 조회 -->
    <select id="selectPendingMembers" resultType="BandMember">
        SELECT * FROM bandMember WHERE bandNo = #{bandNo} AND approved = false
    </select>

    <!-- 승인 상태 변경 -->
    <update id="updateApprovalStatus" parameterType="BandMember">
        UPDATE bandMember
        SET approved = #{approved}
        WHERE no = #{No}
    </update>

    <!-- 승인된 밴드 멤버 조회 -->
    <select id="selectApprovedBandMembers" resultType="BandMember">
        SELECT * FROM bandMember
        WHERE approved = #{approved}
    </select>


    <!-- 밴드 멤버 닉네임 수정 -->
    <update id="updateOne" parameterType="band">
        update bandMember
        set nickname=#{nickname}
        where no=#{no}
    </update>

    <!-- 밴드 멤버 삭제 -->
    <delete id="deleteByMemberId" parameterType="String">
        DELETE FROM bandMember
        WHERE no = #{bandNo};
    </delete>

</mapper>
