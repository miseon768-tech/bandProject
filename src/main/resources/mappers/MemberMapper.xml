<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.MemberMapper">
    <insert id="insertOne" parameterType="com.example.bandproject.model.Member">
        insert into member(id, password, email, name, nickname, interest, agree)
        values(#{id}, #{password}, #{email}, #{name}, #{nickname}, #{interest}, #{agree})
    </insert>

    <select id="selectById" parameterType="java.lang.String" resultType="com.example.bandproject.model.Member">
        select * from member where id = #{id}
    </select>
    <select id="selectById" parameterType="String" resultType="com.example.bandproject.model.Member">
        select * from member where id = #{id}
    </select>
    <select id="selectByNickname" parameterType="String" resultType="com.example.bandproject.model.Member">
        select * from member where nickname = #{nickname}
    </select>
    <select id="selectAccount" resultType="Member" parameterType="String">
        select * from member where id=#{id}
    </select>


    <update id="updateOne" parameterType="Member">
        update member set name = #{name}, nickname=#{nickname}, email=#{email}, interest=#{interest}
        where id=#{id}
    </update>
    <update id="updatePassword" parameterType="updatePassword">
        update member
        set password = #{password}
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="string">
        delete from member where id=#{id}
    </delete>
</mapper>