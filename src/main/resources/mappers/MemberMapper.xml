<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.MemberMapper">
    <insert id="insertOne" parameterType="Member" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO member (id, password, email, name, nickname, interest, agree)
        VALUES (#{id}, #{password}, #{email}, #{name}, #{nickname}, #{interest}, #{agree})
    </insert>

    <!-- 아이디로 멤버 조회 -->
    <select id="selectById" parameterType="string" resultType="member">
        SELECT *
        FROM member
        WHERE id = #{id}
    </select>
    <!-- 닉네임으로 멤버 조회 -->
    <select id="selectByNickname" parameterType="String" resultType="Member">
        select * from member where nickname = #{nickname}
    </select>
    <!-- 계정 조회 -->
    <select id="selectAccount" resultType="Member" parameterType="String">
        select * from member where id=#{id}
    </select>
    <!-- 계정삭제 비밀번호 확인용 -->
    <select id="selectPasswordById" parameterType="string" resultType="string">
        select password from member where id = #{id}
    </select>


    <!-- 멤버 정보 수정 -->
    <update id="updateOne" parameterType="Member">
        update member set name = #{name}, nickname=#{nickname}, email=#{email}, interest=#{interest}
        where id=#{id}
    </update>
    <!-- 비밀번호 수정 -->
    <update id="updatePassword" parameterType="Member">
        update member
        set password = #{password}
        where id = #{id}
    </update>
    <!-- 멤버 삭제 -->
    <delete id="deleteById" parameterType="string" >
        delete from member where id=#{id}
    </delete>
</mapper>