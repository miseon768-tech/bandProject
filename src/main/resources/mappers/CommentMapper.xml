<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.CommentMapper">
    <insert id="insertOne" parameterType="Comment" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO comment (memberNo, bandNo, bandMemberNo, articleNo, content)
        VALUES (#{memberNo}, #{bandNo}, #{bandMemberNo}, #{articleNo}, #{content})
    </insert>
    <!-- 특정 게시글의 모든 댓글 조회 -->
    <select id="selectByNo" parameterType="int" resultType="comment">
        select
        * from comment
        where articleNo=#{no}
        order by commentedAt desc
    </select>
    <!-- 댓글 삭제 -->
    <delete id="deleteByNo" parameterType="int">
        delete from comment
        where commentNo=#{commentNo}
    </delete>
</mapper>